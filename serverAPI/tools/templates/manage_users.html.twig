<!DOCTYPE html>
<html>
<head>
    <title>Manage Users</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <h1>Manage Users</h1>
    <form method="POST" action="../src/users.php">
        <h2>Add User</h2>
        <input type="text" name="username" placeholder="Username" required>
        <input type="email" name="email" placeholder="Email" required>
        <button type="submit" name="add_user">Add</button>
    </form>

    <form method="POST" enctype="multipart/form-data" action="manage_users.php">
        <h2>Import Users from CSV</h2>
        <input type="file" name="csv_file" accept=".csv" required>
        <button type="submit" name="import_csv">Import</button>
    </form>

    <h2>Existing Users</h2>
    <ul>
        {% for user in users %}
            <li>
                <form method="POST" action="../src/users.php">
                    <input type="hidden" name="id" value="{{ user.id }}">
                    <input type="text" name="username" value="{{ user.username }}" required>
                    <input type="email" name="email" value="{{ user.email }}" required>
                    <button type="submit" name="edit_user">Edit</button>
                    <button type="submit" name="remove_user">Remove</button>
                </form>
            </li>
        {% endfor %}
    </ul>
</body>
</html>